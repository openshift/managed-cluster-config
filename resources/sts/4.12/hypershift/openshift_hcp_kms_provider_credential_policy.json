{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Action": [
          "kms:Encrypt",
          "kms:Decrypt",
          "kms:ReEncrypt*",
          "kms:GenerateDataKey*",
          "kms:DescribeKey"
        ],
        "Resource": "*",
        "Condition": {
          "StringLike": {
            "kms:ViaService": "ec2.*.amazonaws.com"
          },
          "StringEquals": {
            "aws:ResourceTag/red-hat-managed": "true"
          }
        }
      }
    ]
}
